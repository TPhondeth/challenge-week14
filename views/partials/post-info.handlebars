<article class="post">
    <div class="title">
        <span><a href="/post/{{id}}" target="_blank">{{title}}</a></span><span>Posted by {{user.username}} on {{format_date created_at}}</span><br>
        <span> {{comments.length}} {{format_plural "comment" comments.length}}</span>
    </div>
    <div class="meta">
        <p>{{post.text}}</p>
    </div>
</article>